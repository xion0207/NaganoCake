<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-borderless">
        <tbody class="border border-dark">
            <tr class="border-bottom border-dark"><td>ジャンル検索</td></tr>
            <% @genres.each do |genre| %>
            <tr><td><%= link_to items_path(genre_id: genre.id) do %><%= genre.name %><% end %></td></tr>

            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-8">
      <table class="table table-borderless">
        <h3>商品一覧（前<%= Item.last.id %>件）</h3>
        <% @items.each do |item| %>
        <div class="col-md-2">
			    <tr>
			      <td><%= image_tag item.image, size: '165x105', class:"attachment item image fallback" %></td>
			    </tr>
			    <tr>
			      <td><%= link_to item_path(item.id) do %><%= item.name %><% end %></td>
			    </tr>
			    <tr>
			      <td>¥<%= item.add_tax_price.to_s(:delimited) %></td>
			    </tr>
			  </div>
			  <% end %>
			  <%= paginate @items %>
      </table>
    </div>
  </div>
</div>