<div class="container">
  <div class="row">
    <div class="col-md-8">
      <br>
      <h4 class="bg-light text-center offset-md-2" style="width: 10rem;">マイページ</h4>
      <br>
      <div class="form-inline">
        <h5 class="font-weight-bold">登録情報</h5>
        <%= link_to customers_edit_path, class:"btn btn-success ml-5" do %>編集する<% end %>
      </div>
      <br>
      <table class="table table-bordered border-dark">
        <tr><td class="bg-light">氏名</td><td><%= @customer.last_name %> <%= @customer.first_name %></td></tr>
        <tr><td class="bg-light">カナ</td><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td></tr>
        <tr><td class="bg-light">郵便番号</td><td><%= @customer.postal_code %></td></tr>
        <tr><td class="bg-light">住所</td><td><%= @customer.address %></td></tr>
        <tr><td class="bg-light">電話番号</td><td><%= @customer.telephone_number %></td></tr>
        <tr><td class="bg-light">メールアドレス</td><td><%= @customer.email %></td></tr>
    </table>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-8">
    <div class="form-inline">
      <h5 class="font-weight-bold">配送先</h5>
      <%= link_to addresses_path, class:"btn btn-primary ml-5" do %>一覧を見る<% end %>
    </div>
    <br>
    <div class="form-inline">
        <h5 class="font-weight-bold">注文履歴</h5>
        <%= link_to customers_edit_path, class:"btn btn-primary ml-5" do %>一覧を見る<% end %>
      </div>
      </div>
  </div>
</div>