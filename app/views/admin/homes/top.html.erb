<div class="container">
  <div class="row">
    <div class="mb-2 bg-light text-black font-weight-bold">注文履歴一覧</div>
    <table class="table">
      <tbody>
        <tr class="bg-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to admin_order_path(order.id) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M') %><% end %></td>
          <td><%= order.name %></td>
          <td><% (OrderDetail.where(order_id: order.id)).each do |order_detail| %><%= order_detail.amount %>個<% end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>