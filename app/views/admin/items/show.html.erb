<div class="container-fluid">
  <div class="row">
    <h1>商品詳細</h1>
    <div class="col-md-3">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-md-8">
      <td>
        <th>商品名</th>
        <th><%= @item.name %></th>
      </td>
      <td>
        <th>商品説明</th>
        <th><%= @item.introduction %></th>
      </td>
      <td>
        <th>ジャンル</th>
        <th><%= Genre.find(@item.genre_id).name %></th>
      </td>
      <td>
        <th>税込価格(税抜価格)</th>
        <th><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</th>
      </td>
      <td>
        <th>販売ステータス</th>
        <th><%= @item.is_active ? '販売中' : '販売停止中' %></th>
      </td>
      <td><%= link_to edit_admin_item_path, class:"btn btn-sm btn-success" do %> 編集する<% end %></td>
    </div>
  </div>
</div>
