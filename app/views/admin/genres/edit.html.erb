<h1>ジャンル編集</h1>
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のerrorが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @genre, url: admin_genre_path do |f| %>

  <h4>ジャンル名</h4>
  <%= f.text_field :name %>

  <%= f.submit '変更を保存' %>

<% end %>