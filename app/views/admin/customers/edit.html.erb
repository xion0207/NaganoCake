<div class="container">
  <div class="row">
    <div class="mb-2 bg-light text-black font-weight-bold"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</div>
    <table class="table table-borderless">
      <tbody>
        <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
           <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><%= f.label :is_active, '有効', value: 1 %>
              <%= f.radio_button :is_active, '1' %>
              <%= f.label :is_active, '退会', value: 0 %>
              <%= f.radio_button :is_active, '0' %>

          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit '変更を保存' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>